pipeline {
    agent {
        docker {
            image 'node:20-alpine'  
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'  
            reuseNode true  
        }
    }
    environment {
        NODE_ENV = 'production'  
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm 
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm ci' 
            }
        }
        stage('Lint') {
            steps {
                sh 'npm run lint' 
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'  
            }
        }
    }
    post {
        always {
            echo 'Cleaning up workspace'
            deleteDir()  
        }
        success {
            echo 'Build and lint successful! Ready for merge to dev.'
        }
        failure {
            echo 'Build or lint failed. Fix issues before merging.'
        }
    }
}