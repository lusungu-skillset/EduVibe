pipeline {
    agent {
        docker {
            label 'signupage'
            image 'node:18' 
            args '-u root' 
        }
    }

    environment {
        CI = 'true' 
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning repository..."
                git branch: 'signupage', url: 'https://github.com/lusungu-skillset/EduVibe.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies..."
                sh 'npm ci'
            }
        }

        stage('Lint Check') {
            steps {
                echo "Running ESLint check..."
                sh 'npx eslint src --ext .js,.jsx || true'
            }
        }

        stage('Build React App') {
            steps {
                echo "Building React app..."
                sh 'npm run build'
            }
        }
    }

    post {
        success {
            echo " Build passed for SignUp component!"
        }
        failure {
            echo " Build failed â€” check logs."
        }
    }
}
