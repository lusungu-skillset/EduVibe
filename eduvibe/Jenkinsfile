pipeline {
    agent { label 'eduvibe-agent' }

    tools {
        nodejs "Node20"   // Define "Node20" in Jenkins Global Tool Config
    }

    environment {
        NODE_ENV = 'production'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm ci'
            }
        }
        stage('Lint') {
            steps {
                sh 'npm run lint'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace'
            deleteDir()
        }
        success {
            echo 'Build and lint successful! Ready for merge to dev.'
        }
        failure {
            echo 'Build or lint failed. Fix issues before merging.'
        }
    }
}
