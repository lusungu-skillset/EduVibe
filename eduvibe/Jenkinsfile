pipeline {
    agent none  // No default agent; specify per-stage or globally

    stages {
        stage('Checkout') {
            agent { label 'signupage' }  // Use your existing agent for checkout if needed
            steps {
                echo 'Cloning repository...'
                git branch: 'signupage', url: 'https://github.com/lusungu-skillset/EduVibe.git'
            }
        }
        stage('Install Dependencies') {
            agent {
                docker { 
                    image 'node:20'  // Official Node.js image with npm pre-installed
                    reuseNode true  // Reuse the workspace from previous stages
                }
            }
            steps {
                sh 'npm ci'
            }
        }
        stage('Lint Check') {
            agent {
                docker { 
                    image 'node:20'
                    reuseNode true
                }
            }
            steps {
                sh 'npm run lint'  // Assuming you have a lint script in package.json
            }
        }
        stage('Build React App') {
            agent {
                docker { 
                    image 'node:20'
                    reuseNode true
                }
            }
            steps {
                sh 'npm run build'
            }
        }
    }
    post {
        always {
            echo 'Build completed â€” check logs.'
        }
    }
}